<script>
  // ---------- Tabs ----------
  const tabButtons = Array.from(document.querySelectorAll(".tabbtn"));
  const sections = Array.from(document.querySelectorAll(".section"));

  function setActive(targetId) {
    sections.forEach(s => s.classList.toggle("active", s.id === targetId));
    tabButtons.forEach(b => b.setAttribute("aria-selected", String(b.dataset.target === targetId)));
  }
  function goTo(id) { setActive(id); window.scrollTo({ top: 0, behavior: "smooth" }); }
  window.goTo = goTo;

  tabButtons.forEach(btn => btn.addEventListener("click", () => goTo(btn.dataset.target)));

  // ---------- Auto-save responses (localStorage) ----------
  const KEY = "m3201_unit5_poly_responses_v1";
  const saved = JSON.parse(localStorage.getItem(KEY) || "{}");

  function loadResponses() {
    document.querySelectorAll("[data-save]").forEach(el => {
      const k = el.getAttribute("data-save");
      if (saved[k] !== undefined) el.value = saved[k];
      el.addEventListener("input", () => {
        saved[k] = el.value;
        localStorage.setItem(KEY, JSON.stringify(saved));
      });
    });
  }

  function resetResponses() {
    if (!confirm("Clear all saved answers on this device?")) return;
    localStorage.removeItem(KEY);
    document.querySelectorAll("[data-save]").forEach(el => el.value = "");
  }
  window.resetResponses = resetResponses;

  loadResponses();

  // ---------- Desmos Helpers ----------
  function makeCalc(containerId, opts = {}) {
    const elt = document.getElementById(containerId);
    return Desmos.GraphingCalculator(elt, {
      expressions: true,
      settingsMenu: true,
      keypad: true,
      zoomButtons: true,
      ...opts
    });
  }
  function add(calc, id, latex) { calc.setExpression({ id, latex }); }

  // Families
  const families = makeCalc("calcFamilies");
  add(families, "n", "n=0");
  add(families, "a", "a=1");
  add(families, "f", "f(x)=a x^n");
  add(families, "g", "y=f(x)");
  add(families, "yint", "A=(0,f(0))");

  // Constant
  const constant = makeCalc("calcConstant");
  add(constant, "c", "c=3");
  add(constant, "line", "y=c");
  add(constant, "yint", "A=(0,c)");
  add(constant, "axis", "x=0");

  // Linear
  const linear = makeCalc("calcLinear");
  add(linear, "m", "m=1");
  add(linear, "b", "b=0");
  add(linear, "line", "y=mx+b");
  add(linear, "yint", "Y=(0,b)");
  add(linear, "xint", "X=(-b/m,0)");

  // Quadratic
  const quad = makeCalc("calcQuadratic");
  add(quad, "a", "a=1");
  add(quad, "h", "h=0");
  add(quad, "k", "k=0");
  add(quad, "parab", "y=a(x-h)^2+k");
  add(quad, "vertex", "V=(h,k)");
  add(quad, "aos", "x=h");

  // Cubic explore (example aligned to cubic investigation idea)
  const cubic = makeCalc("calcCubic");
  add(cubic, "poly", "y=-x^3+2x^2+2x-6");
  add(cubic, "yint", "A=(0,-6)");

  // Table practice graphs
  const table = makeCalc("calcTable");
  add(table, "c1", "y=3");
  add(table, "l1", "y=-2x+1");
  add(table, "q1", "y=(x-1)^2-3");
  add(table, "cu1", "y=x^3-3x");
</script>
